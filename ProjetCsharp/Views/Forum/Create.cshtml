@model ProjetCsharp.Models.Forum.AddForumModel

<div class ="container body-content">
    <div class ="row sectionHeader">
        <div class="sectionHeading">
          Create New Forum 
        </div>
    </div>
    <div class="row">
        <div id="createForumSection">
            <form asp-action="AddForum" method="post" id="createForumForm" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger">
                    <div class="form-group">
                        <label asp-for="Title">Forum Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Choose forum title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>    
                    <div class="form-group">
                        <label asp-for="Description">Forum Description</label>
                        <input asp-for="Description" class="form-control" placeholder="Description" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div id="upload">
                        <label>Upload Forum Image</label>
                        <br/>
                        <label class="btn btn-default btn-file">
                            Browse <input asp-for="ImageUploade" typeof="file" style="display:none" />
                        </label>
                    </div>
                    <button type="submit" id="newForum" class="btn btn-submitPost">Create Forum</button>
                </div>
            </form>
        </div>
    </div>
</div>